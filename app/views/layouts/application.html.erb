<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | FoxBooks</title>
    <!--<title>FoxBooks</title>-->
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header'%>
    <div id='container'>
      <div id='content'>
        <p class="notice"><%= flash[:notice] %></p>
       <%= yield %>
      </div>
      <div id='first-column'>
        <div class="loginbox" style="height:200px">
          
          <% if user_signed_in? %>
            <div>Signed in as  <%= current_user.username %> </div>
          <% else %>
            <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
          <% end %>
          
        </div>
      <div class="searchbox">
        <h2 class="BoxHeaders"> Search catalog</h2>
        
        <!--ADD IF ADMIN LOGGED IN HERE!-->
        <h2><%= link_to 'New Category', new_category_path %></h2>
      </div>
      </div>
    </div>
    <%= render 'layouts/footer'%> 
  </body>
</html>
