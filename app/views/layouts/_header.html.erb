<script type="text/javascript" src="http://code.jquery.com/jquery-1.4.2.min.js"></script> 
<div id='header'>
<h1>Clever Fox Books</h1>
<!--<p>Online Bookstore App</p>-->
<div id='menu'>
    <div id='navbar'>
         <ul>
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Help",   help_path %></li>
            <li><%= link_to "About",  about_path %></li>
            
            <% if current_user %>
              <% if !current_user.admin %>
                <% if session[:cart] != nil && session[:cart].size>0 %>
                  <li><%= link_to "Cart (#{session[:cart].size})", cart_path %></li>
                <% else %>
                 <li><%= link_to "Cart", cart_path %></li>
                <% end %>
              <% end %>
              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  My account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Edit profile", edit_user_registration_path %></li>
                  <% if session[:login] != 1 %>
                    <li><%= link_to "Orders", '#' %></li>
                  <% end %>
                  <li class="nav-divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path,  :method => :delete %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Login", user_session_path %></li>
            <% end %>
         </ul>        
    </div>
</div>
</div>